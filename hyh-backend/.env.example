# --- Database ---
DATABASE_URL=
DIRECT_URL=

# --- Server ---
PORT=4000
CORS_ORIGIN=http://localhost:3000

# --- Auth ---
# Use a long, random value (min 32 chars)
JWT_SECRET="change_me_to_a_long_random_value_32_chars_min"
ADMIN_SECRET=please-change-me
# Password hashing cost (10-15). Default 12
BCRYPT_COST=12
# Block passwords found in public breaches (HIBP range API)
DISALLOW_PWNED_PASSWORDS=true

# --- Business ---
COD_CITIES=Armenia,Calarcá,Calarca
WHATSAPP_NUMBER=573138907119

# --- Cloudinary ---
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
CLOUDINARY_FOLDER=hyh-shop

# --- Contact email (optional) ---
# Configure these to receive "Contacto" form messages by email.
# If not set, the backend will accept the request but skip sending.
MAIL_HOST=
MAIL_PORT=
MAIL_USER=
MAIL_PASS=
CONTACT_TO=
CONTACT_FROM=

# --- Notificaciones de pedidos por correo (opcional) ---
# Si se define, se enviará un email con CSV adjunto en cada pedido
ORDER_NOTIFY_TO=hyhshop247@gmail.com

# --- Wompi (Payments) ---
# Environment: 'sandbox' or 'production'
WOMPI_ENV=sandbox
WOMPI_PUBLIC_KEY=pub_test_xxxxxxxxxxxxxxxxxxxxxxxx
WOMPI_PRIVATE_KEY=prv_test_xxxxxxxxxxxxxxxxxxxxxxxx
# Frontend base URL for redirect back from Wompi
FRONTEND_URL=http://localhost:3000

WOMPI_INTEGRITY_KEY=integrity_test_xxxxxxxxxxxxxxxxxxxxx

# --- Google Sheets Webhook (opcional) ---
# URL de un Web App de Google Apps Script que recibe POST y agrega filas al Sheet.
# Si se omite, la integración queda deshabilitada y no afecta el checkout.
SHEETS_WEBHOOK_URL=
# Secreto opcional para validar el emisor en Apps Script (cabecera X-Webhook-Secret)
SHEETS_WEBHOOK_SECRET=

# --- CallMeBot (alternativa gratuita para WhatsApp, no oficial) ---
# Número destino en formato internacional sin + (ej: 573146905870)
CALLMEBOT_PHONE=
# API key que te da CallMeBot al autorizar por WhatsApp
CALLMEBOT_APIKEY=
